{
  "name": "@bufferapp/publish-formatters",
  "version": "2.0.0",
  "description": "Tools for formattingÂ·dates, numbers, etc.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .js test src/",
    "test": "npm run lint && jest",
    "test-watch": "jest --watch",
    "build": "babel src -d lib",
    "prepublish": "babel src -d lib"
  },
  "author": "hharnisc@gmail.com",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "moment": "2.19.3",
    "moment-timezone": "0.5.13"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "deep-freeze": "0.0.1",
    "eslint": "^5.3.0",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.5.0",
    "prettier": "^1.14.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          },
          "browsers": "> 3%"
        }
      ]
    ],
    "plugins": [
      "transform-export-extensions",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        2,
        {
          "singleQuote": true,
          "trailingComma": "all",
          "semi": false,
          "bracketSpacing": true
        }
      ],
      "no-unused-vars": 2
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
